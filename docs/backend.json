{
  "entities": {
    "Property": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Property",
      "type": "object",
      "description": "Represents a rental property.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the property."
        },
        "name": {
          "type": "string",
          "description": "The name or address of the property."
        },
        "type": {
          "type": "string",
          "description": "The type of property.",
          "enum": ["apartment", "shop"]
        }
      },
      "required": ["id", "name", "type"]
    },
    "Tenant": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Tenant",
      "type": "object",
      "description": "Represents a tenant.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the tenant."
        },
        "name": {
          "type": "string",
          "description": "The name of the tenant."
        },
        "avatar": {
          "type": "string",
          "description": "URL for the tenant's avatar image."
        },
        "rent": {
          "type": "number",
          "description": "The monthly rent amount."
        },
        "status": {
          "type": "string",
          "description": "The payment status of the tenant.",
          "enum": ["paid", "pending"]
        },
        "dueDate": {
          "type": "string",
          "description": "The rent due date.",
          "format": "date-time"
        },
        "whatsappNumber": {
          "type": "string",
          "description": "The tenant's WhatsApp number."
        },
        "propertyId": {
          "type": "string",
          "description": "The ID of the property the tenant is renting."
        }
      },
      "required": ["id", "name", "avatar", "rent", "status", "dueDate", "propertyId"]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/properties/{propertyId}": {
        "schema": { "$ref": "#/entities/Property" },
        "description": "Stores all property information."
    },
    "/tenants/{tenantId}": {
        "schema": { "$ref": "#/entities/Tenant" },
        "description": "Stores all tenant information."
    }
  }
}
